@model IEnumerable<SaleListModel>
@{
    ViewData["Title"] = "All sales";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Old price</th>
            <th>Discount (%)</th>
            <th>Current Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.CustomerName</td>
                <td>$@sale.Price.ToString("F2")</td>
                <td>@((sale.Discount + (sale.IsYoungDriver ? 0.05 : 0)) * 100)%</td>
                <td>$@sale.DiscountPrice.ToString("F2")</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-default" href="/sales/@sale.Id">More details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

