@model CarsByMakeModel

@{
    ViewData["Title"] = $"{Model.Make} cars";
}

<h2>@Model.Make cars</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Travelled distance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
        <tr>
            <th>@car.Make</th>
            <th>@car.Model</th>
            <th>@(car.TravelledDistance / 1000) km</th>
        </tr>
        }
    </tbody>
</table>

