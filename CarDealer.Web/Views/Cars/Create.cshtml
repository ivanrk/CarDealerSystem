@model CarFormModel

@{
    ViewData["Title"] = "Add new car";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" class="form-control">
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" required class="form-control">
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance">Travelled distance</label>
                <input asp-for="TravelledDistance" min="0" class="form-control">
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllParts">Parts</label>
                <select asp-for="SelectedParts" asp-items="Model.AllParts" multiple class="form-control"></select>
                <small>* Hold "Ctrl" to select multiple parts</small> 
            </div>
            <button type="submit" class="btn btn-success">Add car</button>
        </form>
    </div>
</div>

